<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - gNxtHRDashboard</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/gNxtHRDashboard.styles.css" asp-append-version="true" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <header class="container">
        <nav class="navbar-light bg-white border-bottom box-shadow">

            <div class="container-fluid">
                <div class="row col-12">
                    <div class="col-8">
                        <img class="ms-3" src="~/image/screenshot 2024-05-02 185325.png" />
                    </div>
                    <div class="col-4 d-flex align-items-center justify-content-center">
                     
                        <button class="Login_btn ms-3" onclick="redirectToMainInformationLogout()"><strong class="fs-5 input-text-font-size">Employee Self Service</strong></button>
                    </div>

                </div>

            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
