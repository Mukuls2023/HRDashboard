            <div class="row">
                <div class=" col-md-12" style="border: 1px solid #0C87CA; box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);">
                    <div class="copyright p-3 footer-css">
                        <strong style="color:#0C87CA"> © 2024 Auxein, All Rights Reserved.</strong>
                    </div>
                </div>

            </div>
        </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
     <script>
        function redirectToMainInformationLogout() {
            // Redirect to the MainInformation action of the Home controller
            window.location.href = '@Url.Action("LogIn", "Home")';
        }
    </script>
</body>
</html>
